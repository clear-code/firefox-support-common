    -

    :2: 使用しない

    // Webフィード用のサービス
    lockPref("browser.contentHandlers.types.0.name", "");
    lockPref("browser.contentHandlers.types.0.uri", "");
    lockPref("browser.contentHandlers.types.1.name", "");
    lockPref("browser.contentHandlers.types.1.uri", "");
